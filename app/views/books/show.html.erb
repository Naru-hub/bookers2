<div class="container mt-3">
    <div class="row">
    <%= render"books/user_info",user:@user,book:@new_book %>

    <div class="col-md-8 offset-md-1">
<table>
  <tbody>
<h2>Book detail</h2>
<table class="table">
<tbody>
    <tr>
    <td><%= attachment_image_tag @user,:profile_image,:fill,40,40 %><br>
        <%= link_to @book.user.name,user_path(@user[:id]) %></td>
   <td><%= link_to @book.title,book_path(@book[:id]) %></td>
   <td><%= @book.body %></td>
    <% if @user.id == current_user.id %>
    <td><%= link_to "Edit",edit_book_path(@book),class:"btn btn-sm btn-success" %></td>
    <td><%= link_to "Destroy",book_path(@book),class:"btn btn-sm btn-danger destroy",method: :delete,"data-confirm" => "本当に消しますか？" %></td>
    <% end %>
   </tr>
  </tbody>
</table>
</div>
</div>
</div>