<% if book.errors.any? %>
 <%= pluralize(book.errors.count, "error") %>
 <% book.errors.full_messages.each do |message| %>
   <%= message %>
 <% end %>
<% end %>
  <div class="row">
    <div class="col-md-3 ">
       <h2>User info</h2>
       <%= attachment_image_tag user,:profile_image,:fill,100,100,fallback: "no_image.jpg" %>
       <table class="table">
            <tbody>
                <tr>
                    <th>name</th>
                    <th><%= user.name %></th>
                </tr>
                <tr>
                   <th>introduction</th>
                   <th><%= user.introduction %></th>
                </tr>
                <tr>
                    <th>follows</th>
                    <th><%= link_to user.followings.count, user_followings_path(user.id) %></th>
                </tr>
                <tr>
                    <th>followers</th>
                    <th><%= link_to user.followers.count, user_followers_path(user.id) %></th>
                </tr>
                <div>
                  <% if current_user.following?(user) %>
                      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-success" %>
                  <% else %>
                      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-success" %>
                  <% end %>
                </div>

            </tbody>
        </table>
        <div class="row">
            <%= link_to edit_user_path(user.id),class:"btn btn-outline-secondary btn-block", method: :get do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
        </div>


      <h2 class="mt-3">New book</h2>

      <%= form_with model:book,local:true do |f| %>

        <br><label for="book_title">Title</label><br>
        <%= f.text_field :title,class:"form-control book_title" %>

        <br><label for="book_opinion"> Opinion</label><br>
        <%= f.text_area :body,class:"form-control book_body" %>
        <div class="form-group">
        <br><%= f.submit 'Create Book',class:"btn btn-success" %>
      <% end %>
    </div>
  </div>