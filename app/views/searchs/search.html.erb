
<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時-->
  <% if @range == "User" %>
  <h2>Users search for "test"</h2>
    <thead>
       <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:"40x40" %></td>
          <td><%= user.name %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時（＝検索対象モデルがBookの時）-->
    <h2>Book search for "test"</h2>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
  　<tbody>
  　 <% @books.each do |book| %>
  　 <tr>
  　     <td><%= attachment_image_tag book.user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:"40x40" %></td>
  　     <td><%= link_to book.title,book_path(book) %></td>
  　     <td><%= book.body %></td>
  　     <td></td>
        <td></td>
  　 </tr>
  　 <% end %>
  　</tbody>
  <% end %>
</table>