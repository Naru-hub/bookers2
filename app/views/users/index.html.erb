<main>
<div class="container  px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
 <h2>User info</h2>
 <%= attachment_image_tag @user,:profile_image,:fill,100,100,fallback: "no_image.jpg" %>
 <table class="table">
      <tbody>
          <tr>
              <th>name</th>
              <th><%= @user.name %></th>
          </tr>
          <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
          </tr>

      </tbody>
  </table>
  <div class="row">
      <%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block", method: :get do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
  </div>


<h2 class="mt-3">New book</h2>
<%= form_with model:@book,local:true do |f| %>

<br><label for="book_title">Title</label><br>
<%= f.text_field :title %>

<br><label for="book_opinion"> Opinion</label><br>
<%= f.text_area :body %>
<div class="form-group">
<br><%= f.submit 'Create Book',class:"btn btn-success" %>
</div>
<% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user,:profile_image,:fill,40,40 %></td>
            <td><%= @user.name %></td>
            <td><%= link_to "Show",user_path(@user) %></td>
          </tr>
        </tbody>
      </table>
    </div>
</div>
</div>
</main>