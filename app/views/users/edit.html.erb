<div ="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-3">
<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>error
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@user,local:true do |f| %>
  <div class="form-group">
  <label for="inputName">Name</label>
  <%= f.text_field :name,class:"form-control name", autofocus: true, id:"inputName", placeholder:"名前" %>
  </div>
  <div class="form-group">
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image,class:"form-control-file user_image", placeholder: "image" %>
  </div>
  <div class="form-group">
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction,class:"form-control introduction" %>
  </div>
  <%= f.submit "Update User",class:"btn btn-secondary" %>
<% end %>
    </div>
  </div>
</div>